<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
            <link href="{{ asset('css/small-business.css') }}" rel="stylesheet" />
            <link href="{{ asset('css/loading.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body style="height: 100%;font-family: 'Open Sans', 'Lato', 'arial', 'sans-serif';">
        <div style="position: relative;height: auto !important;min-height: 100%;height: 100%;">
                {% for message in app.session.flashbag.get('info') %}
                    <div class="alert alert-info alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert">
                            <span aria-hidden="true">&times;</span>
                            <span class="sr-only">Close</span>
                        </button>
                        <p>{{ message }}</p>
                    </div>
                {% endfor %}

                {{ render(controller('App\\Controller\\BaseController::headerList')) }}

                {% block body %}{% endblock %}

            
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div id="modal_content" class="modal-body">
                  </div>
                </div>
              </div>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Войдите в вашу учетную запись</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div id="modal_content" class="modal-body">                    
                            {{ render(path('fos_user_security_login')) }}                    
                        </div>
                    </div>
                </div>
            </div>
        </div>                
        <!-- Footer -->
        <footer class="py-5 bg-dark footer_block">
            <div class="container">
                <div class="row my-6">
                    <div class="col-md-6 mb-6 ">
                        <a href="{{ path('homepage') }}"><h5 class="m-4 text-center text-white">Главная</h5></a>
                    </div>
                    <div class="col-md-6 mb-6 ">
                        <a href="{{ path('register') }}"><h5 class="m-4 text-center text-white">Регистрация</h5></a>
                    </div>
                    <div class="col-md-6 mb-6 ">
                        <a href="{{ path('about') }}"><h5 class="m-0 text-center text-white">О нас</h5></a>
                    </div>
                    <div class="col-md-6 mb-6 ">
                        <h5 class="m-0 text-center text-white">Поиск</h5>
                    </div>
                </div>
            </div>
            <div class="container">                
                <p class="m-0 text-center text-white">Copyright &copy; Your Website 2018</p>                
            </div>
            <!-- /.container -->
        </footer>
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
            <script src="{{ asset('js/main.js') }}?{{ date().timestamp }}"></script>
        {% endblock %}
    </body>
</html>
